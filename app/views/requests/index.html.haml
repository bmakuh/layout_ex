- title "Requests"
%table
  %tr
    %th Date
    %th Start Time
    %th End Time
    %th Cost
  - for request in @requests
    %tr
      %td= h request.date
      %td= h request.start_time
      %td= h request.end_time
      %td= h request.cost
      %td= link_to "Show", request
      %td= link_to "Edit", edit_request_path(request)
      %td= link_to "Destroy", request, :confirm => 'Are you sure?', :method => :delete

.request
  %img
  %h2=h request.household.name
  .date=h request.date
  .start_time=h request.start_time
  .end_time=h request.end_time
  .cost=h request.cost
%p= link_to "New Request", new_request_path

