- title "#{current_user.household.name} Household Caregivers"

#caregiver-container
  %h1 Caregivers
  -for caregiver in @caregivers
    .caregiver
      .top
        %h2=link_to "#{caregiver}", members_user_path(caregiver)
        %p
        %strong First Name:
        =h caregiver.first_name
        %br
        %strong Last Name:
        =h caregiver.last_name
        %br
        %strong Phone Number:
        =h caregiver.phone
        %br
        %strong Email Address:
        =h caregiver.email
        %p
          -#= link_to "Edit this user", edit_members_user_path(caregiver)
          = link_to 'Remove Caregiver', {:controller => "households", :action => "remove_caregiver", :user => caregiver.id}, :confirm => 'Are you sure?', :method => :post

  -if @pending_caregivers.count > 0
    %h1 Pending Caregivers
    %br
      -for caregiver in @pending_caregivers
        .caregiver
          .top
            %h2=link_to "#{caregiver}", members_user_path(caregiver)
            %p
            %strong First Name:
            =h caregiver.first_name
            %br
            %strong Last Name:
            =h caregiver.last_name
            %br
            %strong Phone Number:
            =h caregiver.phone
            %br
            %strong Email Address:
            =h caregiver.email
            %p
              = link_to 'Confirm Caregiver Request', {:controller => "households", :action => "confirm", :user => caregiver.id}, :method => :post
              = link_to 'Deny Caregiver Request', {:controller => "households", :action => "remove_caregiver", :user => caregiver.id}, :confirm => 'Are you sure?', :method => :post
   
