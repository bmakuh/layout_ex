-title "Neighbors"
%h1 Pending Neighbor Requests
%br
  -for pending_neighbor in @pending_neighbors
    .request
      = image_tag(pending_neighbor.neighbor.photo.url(:thumb), :alt => "#{pending_neighbor.neighbor.to_s}")
      .left
        %h2.name= pending_neighbor.neighbor
        %h2.household Household
      .right
        - for user in pending_neighbor.neighbor.users
          .user
            .user_name
              %strong Caregiver:  
              =h user.first_name 
              =h user.last_name
            .phone
              %strong Phone:
              =h number_to_phone(user.phone, :area_code => true)
            .email
              %strong Email:
              =h user.email
      .tools
        .volunteer-button
          =link_to "Remove Request", members_neighbor_path(pending_neighbor), :confirm => 'Are you sure you want to remove this neighbor request?', :method => :delete
      .clear
