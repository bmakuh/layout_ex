-title "Neighbors"
%h1 All Neighbors
%br
  - for neighbor in @neighbors
    .neighbor
      = link_to neighbor.neighbor, members_household_url(neighbor.neighbor)
      = link_to "x", members_neighbor_path(neighbor), :confirm => "Are you sure?", :action => 'delete', :method => :delete
      = link_to image_tag(current_user.household.photo.url, :alt => "#{current_user.household.to_s}", :width => 36, :height => 36), members_household_url(neighbor.neighbor)
      %h2
        = link_to neighbor.neighbor, members_household_url(neighbor.neighbor)
        = link_to 'x', members_neighbor_path(neighbor), :title => 'remove from my neighbors', :confirm => "Are you sure?", :method => :delete
      .clear

