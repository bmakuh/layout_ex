-title "Neighbors"
%h1 All of My Neighbors
%br
  - for neighbor in @neighbors
    .neighbor
      = link_to image_tag(neighbor.neighbor.photo.url, :alt => "#{current_user.household.to_s}", :width => 60, :height => 60), members_household_url(neighbor.neighbor)
      .left
        %h2.name=link_to neighbor.neighbor, members_household_url(neighbor.neighbor)
        %h2.household Household
      .right

        .phone
          - for n_user in neighbor.neighbor.users
            .user
              User: 
              =h n_user.first_name 
              =h n_user.last_name
              Phone:
              =h n_user.phone
      .exit
        =link_to 'x', members_neighbor_path(neighbor), :title => 'remove from my neighbors', :confirm => "Are you sure?", :method => :delete
      .clear
