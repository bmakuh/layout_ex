- title "Request"
%p
  %strong From:
  =h @request.from_date.to_s(:short)
  at
  =h @request.start_time.to_s(:justTime)
%p
  %strong To:
  =h @request.to_date.to_s(:short) 
  at
  =h @request.end_time.to_s(:justTime)
%p
  %strong Phone:
  - current_user.phone = current_user.phone.gsub (/\D/, "")
  =h number_to_phone(current_user.phone, :area_code => true)
%p
  %strong Cost:
  = h @request.cost
%p
  = link_to "Edit", edit_members_request_path(@request)
  |
  = link_to "Destroy", members_request_path(@request), :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", members_requests_path
